<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <div class="login-icon">
        <% if resource_name == :student %>
          <i class="bi bi-person-badge-fill"></i>
        <% else %>
          <i class="bi bi-mortarboard-fill"></i>
        <% end %>
      </div>
      <h2 class="login-title"><%= t('devise.sessions.new.sign_in') %></h2>
      <p class="login-subtitle">
        <% if resource_name == :student %>
          Bienvenue sur Practice-FR - Espace Élève
        <% else %>
          Bienvenue sur Practice-FR - Espace Professeur
        <% end %>
      </p>
    </div>
    
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "modern-form" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <div class="input-group">
            <div class="input-icon">
              <i class="bi bi-envelope"></i>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "form-control modern-input", 
                  placeholder: "votre@email.com" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, t('devise.sessions.new.password'), class: "form-label" %>
          <div class="input-group">
            <div class="input-icon">
              <i class="bi bi-lock"></i>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", 
                  class: "form-control modern-input", 
                  placeholder: "••••••••" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check-group">
            <label class="modern-checkbox">
              <%= f.check_box :remember_me, class: "checkbox-input" %>
              <span class="checkmark"></span>
              <%= t('devise.sessions.new.remember_me') %>
            </label>
          </div>
        <% end %>

        <div class="form-submit">
          <%= f.submit t('devise.sessions.new.sign_in'), class: "btn-modern btn-primary" %>
        </div>
      <% end %>

      <div class="login-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<style>
  /* === LOGIN CONTAINER === */
  .login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #E8F4FD 0%, #F7FAFC 50%, #FFFFFF 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    font-family: 'Inter', sans-serif;
  }

  .login-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(30, 61, 89, 0.1);
    overflow: hidden;
    width: 100%;
    max-width: 420px;
    border: 1px solid rgba(30, 61, 89, 0.05);
  }

  /* === LOGIN HEADER === */
  .login-header {
    background: linear-gradient(135deg, #1E3D59 0%, #2B4F76 100%);
    padding: 2.5rem 2rem 2rem;
    text-align: center;
    color: white;
    position: relative;
  }

  .login-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  }

  .login-icon {
    background: rgba(255, 255, 255, 0.15);
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    backdrop-filter: blur(10px);
  }

  .login-icon i {
    font-size: 1.8rem;
    color: #4A90E2;
  }

  .login-title {
    font-family: 'Lora', serif;
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: white;
  }

  .login-subtitle {
    font-size: 1rem;
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 400;
  }

  /* === LOGIN FORM === */
  .login-form {
    padding: 2.5rem 2rem 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #2D3748;
    font-size: 0.95rem;
  }

  .input-group {
    position: relative;
  }

  .input-icon {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #A0AEC0;
    z-index: 1;
  }

  .modern-input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 45px;
    border: 2px solid #E2E8F0;
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #F7FAFC;
  }

  .modern-input:focus {
    outline: none;
    border-color: #4A90E2;
    background: white;
    box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
  }

  .modern-input:focus + .input-icon {
    color: #4A90E2;
  }

  .modern-input::placeholder {
    color: #A0AEC0;
  }

  /* === CHECKBOX MODERNO === */
  .form-check-group {
    margin: 1.5rem 0;
  }

  .modern-checkbox {
    display: flex;
    align-items: center;
    cursor: pointer;
    font-size: 0.95rem;
    color: #4A5568;
  }

  .checkbox-input {
    display: none;
  }

  .checkmark {
    width: 20px;
    height: 20px;
    border: 2px solid #E2E8F0;
    border-radius: 4px;
    margin-right: 0.75rem;
    position: relative;
    transition: all 0.3s ease;
    background: white;
  }

  .checkbox-input:checked + .checkmark {
    background: #4A90E2;
    border-color: #4A90E2;
  }

  .checkbox-input:checked + .checkmark::after {
    content: '';
    position: absolute;
    left: 6px;
    top: 2px;
    width: 6px;
    height: 10px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }

  /* === BOTÃO MODERNO === */
  .form-submit {
    margin: 2rem 0 1.5rem;
  }

  .btn-modern {
    width: 100%;
    padding: 0.875rem 1.5rem;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .btn-primary {
    background: linear-gradient(135deg, #1E3D59 0%, #4A90E2 100%);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(30, 61, 89, 0.3);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  /* === LINKS === */
  .login-links {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #E2E8F0;
  }

  .login-links .links-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .login-links a {
    color: #4A90E2;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .login-links a:hover {
    color: #1E3D59;
    text-decoration: none;
  }

  /* === RESPONSIVIDADE === */
  @media (max-width: 480px) {
    .login-container {
      padding: 1rem 0.5rem;
    }
    
    .login-card {
      border-radius: 16px;
    }
    
    .login-header {
      padding: 2rem 1.5rem 1.5rem;
    }
    
    .login-form {
      padding: 2rem 1.5rem 1.5rem;
    }
    
    .login-title {
      font-size: 1.5rem;
    }
  }
</style>
