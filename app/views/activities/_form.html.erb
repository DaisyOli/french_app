<div class="card shadow-sm daisy-form-card">
  <div class="card-header text-center daisy-form-header">
    <div class="daisy-avatar-small">D</div>
    <h2 class="form-title my-2">
      <% if activity.new_record? %>
        <i class="bi bi-sparkles"></i> Nouvelle cr√©ation
      <% else %>
        <i class="bi bi-palette"></i> Retoucher ma cr√©ation
      <% end %>
    </h2>
    <p class="daisy-subtitle">Laisse libre cours √† ta cr√©ativit√©! üåº</p>
  </div>
  <div class="card-body p-4">
    <%= form_with(model: activity) do |form| %>
      <% if activity.errors.any? %>
        <div class="alert alert-danger">
          <h5><i class="bi bi-exclamation-triangle"></i> <%= pluralize(activity.errors.count, "erreur") %> :</h5>
          <ul>
            <% activity.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :t√≠tulo, t('activerecord.attributes.activity.titre'), class: "form-label" %>
        <%= form.text_field :t√≠tulo, class: "form-control form-control-lg" %>
      </div>

      <div class="mb-4">
        <%= form.label :n√≠vel, t('activerecord.attributes.activity.niveau'), class: "form-label" %>
        <%= form.select :n√≠vel, ['A1', 'A2', 'B1', 'B2', 'C1', 'C2'], 
                      { prompt: 'S√©lectionnez le niveau' }, 
                      { class: "form-select form-select-lg" } %>
      </div>

      <div class="mb-4">
        <%= form.label :texto, t('activerecord.attributes.activity.texte'), class: "form-label" %>
        <%= form.text_area :texto, rows: 5, class: "form-control" %>
      </div>
      
      <div class="d-grid gap-3 mt-5">
        <%= form.submit activity.new_record? ? "Cr√©er ma petite merveille" : "Mettre √† jour l'Activit√©", 
                  class: "btn btn-lg btn-primary daisy-btn-primary" %>
        <%= link_to "Retour", activities_path, class: "btn btn-lg btn-outline-secondary daisy-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

