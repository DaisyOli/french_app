  /* === DASHBOARD DA DAISY === */
  .daisy-dashboard {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, #FFE4E1 0%, #FFF0F5 50%, #E8F4FD 100%);
    min-height: 100vh;
    padding: 2rem 1rem;
    position: relative;
  }

  .daisy-dashboard::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 80%, rgba(255, 192, 203, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 182, 193, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(255, 228, 225, 0.1) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .daisy-dashboard > * {
    position: relative;
    z-index: 1;
  }

  /* Solução simples: colocar dashboard para trás quando modal aberto */
  body.modal-open .daisy-dashboard {
    z-index: -1 !important;
    position: relative !important;
  }

  /* SOLUÇÃO ESPECÍFICA PARA DESKTOP - onde o problema ocorre */
  @media (min-width: 992px) {
    /* Forçar dashboard para trás no desktop quando modal aberto */
    body.modal-open .daisy-dashboard {
      z-index: -100 !important;
      position: relative !important;
      transform: translateZ(-1px) !important;
    }
    
    /* Forçar todos os elementos filhos da dashboard para trás também */
    body.modal-open .daisy-dashboard * {
      z-index: inherit !important;
    }
    
    /* Garantir que nenhum elemento da dashboard interfira */
    body.modal-open .hero-section,
    body.modal-open .daisy-stats-section,
    body.modal-open .filters-section,
    body.modal-open .activities-section {
      z-index: -100 !important;
      position: relative !important;
    }
  }

  /* Remover qualquer isolamento que possa interferir */
