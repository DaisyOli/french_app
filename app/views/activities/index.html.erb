<div class="activities-container">
  <div class="header-section">
    <div></div>
    <h1 class="main-title"><%= t('common.my_activities') %></h1>
    <%= link_to t('common.new_activity'), new_activity_path, class: "btn nouvelle-activite-btn" %>
  </div>

  <% if @activities.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @activities.each do |activity| %>
        <div class="col">
          <div class="card h-100">
            <div class="card-header">
              <h2 class="card-title">
                <%= activity.título %>
                <span class="badge nivel-badge" data-nivel="<%= activity.nível %>"><%= activity.nível %></span>
              </h2>
            </div>
            <div class="card-body">
              <% if activity.texto.present? %>
                <p class="card-text"><%= truncate(activity.texto, length: 100) %></p>
              <% end %>
            </div>
            <div class="card-footer">
              <%= link_to "Voir", activity, class: "action-btn btn-voir" %>
              <%= link_to "Modifier", edit_activity_path(activity), class: "action-btn btn-modifier" %>
              <%= button_to "Supprimer", activity_path(activity), 
                    method: :delete, 
                    data: { confirm: t('common.confirm_delete_activity') },
                    class: "action-btn btn-supprimer" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <p><%= t('common.no_activities') %></p>
      <p><%= link_to t('common.create_activity'), new_activity_path, class: "btn nouvelle-activite-btn" %></p>
    </div>
  <% end %>
</div>

