<div class="daisy-dashboard">
  <!-- Hero Section Personalizado -->
  <div class="hero-section">
    <div class="hero-content">
      <div class="daisy-welcome-card">
        <div class="avatar-section">
          <div class="daisy-avatar-hero">
            <span class="daisy-initial-hero">D</span>
            <div class="daisy-sparkles">*</div>
          </div>
          <div class="welcome-text">
            <h1>Mes petites créations</h1>
            <p>Tes activités pédagogiques avec amour</p>
            <div class="daisy-mood-indicator">
              <span class="mood-emoji">♥</span>
              <span class="mood-text">Mode créatif activé!</span>
            </div>
          </div>
        </div>
        <div class="header-actions">
          <div class="action-buttons">
            <%= link_to new_activity_path, class: "btn-new-activity-daisy" do %>
              <i class="bi bi-magic"></i>
              <span>Nouvelle idée magique</span>
              <div class="btn-sparkle">*</div>
            <% end %>
            <%= link_to new_student_invitation_path, class: "btn-invite-student-daisy" do %>
              <i class="bi bi-envelope-heart-fill"></i>
              <span>Inviter un étudiant</span>
              <div class="btn-sparkle">✨</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistiques mignonnes -->
  <div class="daisy-stats-section">
    <div class="stats-container">
      <div class="stat-card">
        <div class="stat-icon"><i class="bi bi-palette-fill"></i></div>
        <div class="stat-content">
          <span class="stat-number"><%= @activities.count %></span>
          <span class="stat-label">créations</span>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon"><i class="bi bi-book-fill"></i></div>
        <div class="stat-content">
          <span class="stat-number"><%= @activities.sum { |a| a.questions.count + a.fill_blanks.count + a.sentence_orderings.count + a.paragraph_orderings.count } %></span>
          <span class="stat-label">questions</span>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon"><i class="bi bi-star-fill"></i></div>
        <div class="stat-content">
          <span class="stat-number"><%= Date.current.strftime("%d") %></span>
          <span class="stat-label">jour du mois</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Filtros por nível com estilo fofo -->
  <div class="filters-section">
    <div class="filter-header">
      <h3><i class="bi bi-funnel-fill"></i> Filtrer par niveau</h3>
      <p>Trouve tes créations par difficulté</p>
    </div>
  <div class="niveau-filters">
      <button class="filter-btn active" data-niveau="tous">
        <i class="bi bi-rainbow"></i>
        Tous mes niveaux
      </button>
      <button class="filter-btn filter-a1" data-niveau="A1">
        <i class="bi bi-circle-fill"></i>
        A1
      </button>
      <button class="filter-btn filter-a2" data-niveau="A2">
        <i class="bi bi-circle-fill"></i>
        A2
      </button>
      <button class="filter-btn filter-b1" data-niveau="B1">
        <i class="bi bi-circle-fill"></i>
        B1
      </button>
      <button class="filter-btn filter-b2" data-niveau="B2">
        <i class="bi bi-circle-fill"></i>
        B2
      </button>
      <button class="filter-btn filter-c1" data-niveau="C1">
        <i class="bi bi-circle-fill"></i>
        C1
      </button>
      <button class="filter-btn filter-c2" data-niveau="C2">
        <i class="bi bi-circle-fill"></i>
        C2
      </button>
    </div>
  </div>

  <!-- Activities Section -->
  <div class="activities-section">
  <% if @activities.any? %>
      <div class="section-header">
        <h2><i class="bi bi-heart-fill text-danger"></i> Tes créations avec amour</h2>
        <p>Chaque activité est une petite œuvre d'art pédagogique</p>
      </div>
      <div class="activities-grid">
      <% @activities.each do |activity| %>
          <div class="activity-card-daisy" data-niveau="<%= activity.nível %>">
            <div class="card-header">
              <div class="level-badge level-<%= activity.nível.downcase %>">
                <i class="bi bi-circle-fill level-icon"></i>
                <%= activity.nível %>
              </div>
              <div class="activity-meta">
                <i class="bi bi-heart-fill"></i>
                <%= activity.created_at.strftime("%d/%m") %>
              </div>
            </div>
            
            <div class="card-body">
              <h3 class="activity-title"><%= activity.título %></h3>
              <% if activity.texto.present? %>
                <p class="activity-description">
                  <%= truncate(activity.texto, length: 100) %>
                </p>
              <% end %>
              
              <div class="activity-stats">
                <div class="stat">
                  <i class="bi bi-question-circle-fill"></i>
                  <% total_exercises = activity.questions.count + activity.fill_blanks.count + activity.sentence_orderings.count + activity.paragraph_orderings.count %>
                  <span><%= total_exercises %> questions</span>
                </div>
                <div class="stat">
                  <i class="bi bi-clock-fill"></i>
                  <span>~<%= [5, total_exercises * 2].max %> min</span>
                </div>
              </div>
            </div>
            
            <div class="card-footer">
              <%= link_to activity, class: "btn-action btn-voir-daisy" do %>
                <i class="bi bi-eye-fill"></i>
                Admirer
              <% end %>
              <%= link_to edit_activity_path(activity), class: "btn-action btn-modifier-daisy" do %>
                <i class="bi bi-palette-fill"></i>
                Retoucher
              <% end %>
              <%= button_to activity_path(activity), 
                    method: :delete, 
                                         data: { confirm: "Es-tu sûre de vouloir supprimer cette création?" },
                    class: "btn-action btn-supprimer-daisy" do %>
                <i class="bi bi-archive-fill"></i>
                Archiver
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
      <div class="empty-state-daisy">
        <div class="empty-icon">
          <i class="bi bi-palette-fill"></i>
        </div>
        <h3>Ton atelier créatif t'attend!</h3>
        <p>C'est le moment parfait pour créer ta première activité magique.</p>
        <div class="empty-encouragement">
                      <span>* Laisse libre cours à ton imagination *</span>
        </div>
        <%= link_to new_activity_path, class: "btn-create-first-daisy" do %>
          <i class="bi bi-magic"></i>
          Créer ma première œuvre
                      <span class="btn-heart">♥</span>
        <% end %>
    </div>
  <% end %>
  </div>
</div>

